            {/* [ÏÑπÏÖò 2] üåê Sites - Hub, Ìïú Ï§ÑÏóê 3~4Í∞ú ÏßßÍ≥† ÍµµÏùÄ Ïπ© */}
            <section>
              <h3 className="font-bold text-slate-800 mb-2 text-sm flex items-center gap-1"><span aria-hidden>üåê</span> Sites</h3>
              <div className="flex flex-wrap gap-2">
                {[...SITE_OPTIONS.domestic, ...SITE_OPTIONS.international].map((site: { name: string }) => {
                  const checked = tempSelectedSites.includes(site.name);
                  return (
                    <button
                      key={site.name}
                      type="button"
                      onClick={() => {
                        setTempSelectedSites((p) =>
                          checked ? p.filter((s) => s !== site.name) : [...p, site.name]
